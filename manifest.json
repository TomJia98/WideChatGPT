{
  "manifest_version": 3,
  "name": "Larger ChatGPT Interactive Window",
  "version": "1.0",
  "description": "Dynamically change and maximize the width of ChatGPTs interactive window",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "asd.html"
  },
  "content_scripts": [
    {
        "css": ["style.css"],
    "js": ["scripts/script.js"],
    "matches": [
        "https://chatgpt.com/*"
     
      ]
  }]
}
